<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen_splash</item>
    </style>

    <style name="AppTheme.TransparentTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="main_input_text">
        <item name="android:maxLength">50</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bordered_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="colorAccent">@color/inputbox_highlight_color</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColorHint">@color/inputbox_highlight_color</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:colorAccent">@color/inputbox_highlight_color</item>
        <item name="android:background">@drawable/edit_text_custom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Siyah</item>
    </style>

</resources>
